{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "docker/Dockerfile"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/ping",
    "healthcheckTimeout": 100
  },
  "environments": {
    "production": {
      "build": {
        "dockerfilePath": "docker/Dockerfile"
      },
      "deploy": {
        "numReplicas": 1,
        "region": "us-west1"
      }
    }
  }
}