{
  "mcpServers": {
    "gmail-universal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/app/server/gmail-mcp-server.js"
      ],
      "env": {
        "NANGO_PROVIDER": "gmail",
        "NANGO_PROVIDER_CONFIG_KEY": "gmail-getting-started",
        "NANGO_SECRET_KEY": "${NANGO_SECRET_KEY}",
        "NANGO_HOST": "${NANGO_HOST}",
        "MCP_SERVICE_NAME": "gmail"
      },
      "anythingllm": {
        "autoStart": true,
        "workspaceAware": true,
        "description": "Gmail integration - handles all email operations",
        "toolPrefix": "gmail"
      }
    },
    "gcalendar-universal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/app/server/simple-google-calendar-mcp.js"
      ],
      "env": {
        "NANGO_PROVIDER": "google-calendar",
        "NANGO_PROVIDER_CONFIG_KEY": "google-calendar-getting-started",
        "NANGO_SECRET_KEY": "${NANGO_SECRET_KEY}",
        "NANGO_HOST": "${NANGO_HOST}",
        "MCP_SERVICE_NAME": "gcalendar"
      },
      "anythingllm": {
        "autoStart": true,
        "workspaceAware": true,
        "description": "Google Calendar integration - handles all calendar operations",
        "toolPrefix": "gcalendar"
      }
    },
    "twilio-universal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/app/server/mcp/build/index.js",
        "--services",
        "twilio_api_v2010",
        "--tags",
        "Api20100401IncomingPhoneNumber"
      ],
      "env": {
        "NANGO_PROVIDER": "twilio",
        "NANGO_PROVIDER_CONFIG_KEY": "twilio",
        "NANGO_CONNECTION_ID": "test-connection-id",
        "NANGO_SECRET_KEY": "${NANGO_SECRET_KEY}",
        "NANGO_HOST": "${NANGO_HOST}",
        "TWILIO_CLIENT_ID": "${TWILIO_CLIENT_ID}",
        "TWILIO_AUTH_TOKEN": "${TWILIO_AUTH_TOKEN}",
        "TWILIO_NUMBER": "${TWILIO_NUMBER}",
        "MCP_SERVICE_NAME": "twilio"
      },
      "anythingllm": {
        "autoStart": true,
        "workspaceAware": true,
        "description": "Twilio integration - handles SMS, calls, and phone number operations",
        "toolPrefix": "twilio"
      }
    },
    "gdrive-universal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/app/server/drive-server.js"
      ],
      "env": {
        "NANGO_PROVIDER": "google-drive",
        "NANGO_PROVIDER_CONFIG_KEY": "google-drive-getting-started",
        "NANGO_CONNECTION_ID": "${NANGO_CONNECTION_ID}",
        "NANGO_SECRET_KEY": "${NANGO_SECRET_KEY}",
        "NANGO_HOST": "${NANGO_HOST}",
        "MCP_SERVICE_NAME": "gdrive"
      },
      "anythingllm": {
        "autoStart": true,
        "workspaceAware": true,
        "description": "Google Drive integration - list files, upload, download, create folders, share files, and access synced documents",
        "toolPrefix": "gdrive"
      }
    },
    "linkedin-universal": {
      "type": "stdio",
      "command": "node",
      "args": [
        "/app/server/linkedin-server.js"
      ],
      "env": {
        "NANGO_PROVIDER": "linkedin",
        "NANGO_PROVIDER_CONFIG_KEY": "linkedin-getting-started",
        "NANGO_SECRET_KEY": "${NANGO_SECRET_KEY}",
        "NANGO_HOST": "${NANGO_HOST}",
        "MCP_SERVICE_NAME": "linkedin"
      },
      "anythingllm": {
        "autoStart": true,
        "workspaceAware": true,
        "description": "LinkedIn integration - handles all LinkedIn operations",
        "toolPrefix": "linkedin"
      }
    }
  }
}
