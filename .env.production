# Tredy Production Environment Configuration
# Copy this file to .env and configure with your production values

###########################################
# CORE CONFIGURATION
###########################################
NODE_ENV=production
SERVER_PORT=3001
STORAGE_DIR=/app/server/storage
UID=1000
GID=1000

###########################################
# AUTHENTICATION & SECURITY
###########################################
# IMPORTANT: Change these values in production!
# Leave AUTH_TOKEN empty for single-user mode, or set a password for multi-user mode
AUTH_TOKEN=
JWT_SECRET=your-super-secret-jwt-key-at-least-32-chars-long
JWT_EXPIRY=30d
SIG_KEY=your-signing-key-at-least-32-chars-long
SIG_SALT=your-signing-salt-at-least-32-chars-long

###########################################
# DATABASE CONFIGURATION
###########################################
# For PostgreSQL (recommended for production):
# DATABASE_CONNECTION_STRING=postgresql://user:password@localhost:5432/tredy

# Vector Database Selection
VECTOR_DB=lancedb
# VECTOR_DB=pinecone
# PINECONE_API_KEY=
# PINECONE_INDEX=

# VECTOR_DB=chroma
# CHROMA_ENDPOINT=http://localhost:8000
# CHROMA_API_KEY=

# VECTOR_DB=qdrant
# QDRANT_ENDPOINT=http://localhost:6333
# QDRANT_API_KEY=

###########################################
# LLM PROVIDER CONFIGURATION
###########################################
# Together AI (Default)
LLM_PROVIDER=togetherai
TOGETHER_AI_API_KEY=your-together-ai-api-key
TOGETHER_AI_MODEL_PREF=meta-llama/Meta-Llama-3.1-70B-Instruct-Turbo

# OpenAI
# LLM_PROVIDER=openai
# OPEN_AI_KEY=your-openai-api-key
# OPEN_MODEL_PREF=gpt-4o

# Anthropic
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL_PREF=claude-3-sonnet-20240229

# Google Gemini
# LLM_PROVIDER=gemini
# GEMINI_API_KEY=your-gemini-api-key
# GEMINI_LLM_MODEL_PREF=gemini-2.0-flash-lite

# Groq
# LLM_PROVIDER=groq
# GROQ_API_KEY=your-groq-api-key
# GROQ_MODEL_PREF=llama-3.1-70b-versatile

# Local Ollama
# LLM_PROVIDER=ollama
# OLLAMA_BASE_PATH=http://localhost:11434
# OLLAMA_MODEL_PREF=llama3.1:70b

###########################################
# EMBEDDING CONFIGURATION
###########################################
EMBEDDING_ENGINE=native
EMBEDDING_MODEL_PREF=Xenova/all-MiniLM-L6-v2
EMBEDDING_MODEL_MAX_CHUNK_LENGTH=8192

# For OpenAI Embeddings
# EMBEDDING_ENGINE=openai
# OPEN_AI_KEY_EMBEDDING=your-openai-api-key

# For Cohere Embeddings
# EMBEDDING_ENGINE=cohere
# COHERE_API_KEY_EMBEDDING=your-cohere-api-key

###########################################
# AGENT CONFIGURATION
###########################################
AGENT_SEARCH_PROVIDER=none
# AGENT_SEARCH_PROVIDER=serper
# AGENT_SERPER_DEV_KEY=your-serper-api-key

# AGENT_SEARCH_PROVIDER=tavily
# AGENT_TAVILY_API_KEY=your-tavily-api-key

# AGENT_SEARCH_PROVIDER=google
# AGENT_GOOGLE_SEARCH_API_KEY=your-google-api-key
# AGENT_GOOGLE_SEARCH_ENGINE_ID=your-google-engine-id

# Agent Skills Configuration
DEFAULT_AGENT_SKILLS=
DISABLED_AGENT_SKILLS=
AGENT_USE_OPENAI_FUNCTIONS=false

###########################################
# TRANSCRIPTION & AUDIO
###########################################
WHISPER_PROVIDER=local
# WHISPER_PROVIDER=openai
# OPENAI_WHISPER_API_KEY=your-openai-api-key

# WHISPER_PROVIDER=assemblyai
# ASSEMBLYAI_API_KEY=your-assemblyai-api-key

# WHISPER_PROVIDER=deepgram
# DEEPGRAM_API_KEY=your-deepgram-api-key

# Text-to-Speech Configuration
TTS_PROVIDER=
# TTS_PROVIDER=openai
# TTS_OPEN_AI_KEY=your-openai-api-key
# TTS_OPEN_AI_VOICE_MODEL=alloy

# TTS_PROVIDER=elevenlabs
# TTS_ELEVEN_LABS_KEY=your-elevenlabs-api-key
# TTS_ELEVEN_LABS_VOICE=your-voice-id

###########################################
# SUPABASE CONFIGURATION (Optional)
###########################################
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

###########################################
# EMAIL CONFIGURATION (Optional)
###########################################
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
EMAIL_TEMPLATES_PATH=/app/server/storage/email-templates

###########################################
# CUSTOM BRANDING
###########################################
CUSTOM_APP_NAME=Tredy
META_PAGE_TITLE=Tredy - AI Assistant
META_PAGE_FAVICON=/favicon.png
LOGO_FILENAME=tredy-logo.png
SUPPORT_EMAIL=support@tredy.ai
FOOTER_DATA=

###########################################
# PERFORMANCE & LIMITS
###########################################
FILE_UPLOAD_LIMIT=3GB
MAX_CONCURRENT_UPLOADS=5
MAX_DOCUMENT_COUNT_PER_WORKSPACE=500
TEXT_SPLITTER_CHUNK_SIZE=1000
TEXT_SPLITTER_CHUNK_OVERLAP=100
MAX_EMBED_CHUNK_SIZE=1000
NODE_OPTIONS=--max-old-space-size=4096
WORKERS_COUNT=2

###########################################
# RATE LIMITING
###########################################
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

###########################################
# LOGGING
###########################################
LOG_LEVEL=info
LOG_FORMAT=json

###########################################
# FEATURE FLAGS
###########################################
FEATURE_FLAGS=
EXPERIMENTAL_FEATURES=false
MOBILE_APP_ENABLED=false
MCP_ENABLED=false
MCP_SERVERS=

###########################################
# MONITORING & TELEMETRY
###########################################
DISABLE_TELEMETRY=true

###########################################
# BROWSER EXTENSION
###########################################
BROWSER_EXTENSION_API_KEY=

###########################################
# COMMUNITY HUB
###########################################
HUB_API_KEY=